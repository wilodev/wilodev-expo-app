{
	"name": "wilodev-expo-app",
	"version": "1.0.0",
	"main": "expo/AppEntry.js",
	"scripts": {
		"app:clean": "sudo rm -rf node_modules bun.lockb && bun install",
		"start": "watchman watch-del-all && expo start",
		"aos:dev": "NODE_ENV=development expo start --android",
		"aos:staging": "NODE_ENV=staging expo start --android",
		"aos:production": "NODE_ENV=production expo start --android",
		"ios:dev": "NODE_ENV=development expo start --ios",
		"ios:staging": "NODE_ENV=staging expo start --ios",
		"ios:prod": "NODE_ENV=production expo start --ios",
		"web:dev": "NODE_ENV=development expo start --web",
		"web:staging": "NODE_ENV=staging expo start --web",
		"web:production": "NODE_ENV=production expo start --web",
		"lint": "expo lint",
		"lint:fix": "eslint . --fix",
		"prettier": "prettier --check './src/**/*.{ts,tsx,json}'",
		"prettier:fix": "prettier --write './src/**/*.{ts,tsx,json}'",
		"prepare": "husky || true",
		"commitlint": "commitlint --edit"
	},
	"dependencies": {
		"@gluestack-style/react": "^1.0.57",
		"@gluestack-ui/config": "^1.1.19",
		"@gluestack-ui/themed": "^1.1.42",
		"@hookform/resolvers": "^3.9.0",
		"@react-native-community/netinfo": "11.3.1",
		"@react-navigation/bottom-tabs": "^7.0.0-rc.19",
		"@react-navigation/native": "^7.0.0-rc.12",
		"@react-navigation/native-stack": "^7.0.0-rc.14",
		"@realm/react": "^0.9.0",
		"@reduxjs/toolkit": "^2.2.6",
		"@tanstack/react-query": "^5.51.11",
		"date-fns": "^3.6.0",
		"dompurify": "^3.1.6",
		"expo": "~51.0.22",
		"expo-application": "~5.9.1",
		"expo-blur": "~13.0.2",
		"expo-contacts": "~13.0.4",
		"expo-linear-gradient": "~13.0.2",
		"expo-local-authentication": "~14.0.1",
		"expo-network": "~6.0.1",
		"expo-secure-store": "~13.0.2",
		"expo-status-bar": "~1.12.1",
		"i18next": "^23.12.2",
		"jest": "^29.7.0",
		"jest-expo": "^51.0.3",
		"react": "18.2.0",
		"react-hook-form": "^7.52.1",
		"react-i18next": "^15.0.0",
		"react-native": "0.74.3",
		"react-native-gesture-handler": "~2.16.2",
		"react-native-reanimated": "~3.10.1",
		"react-native-safe-area-context": "4.10.5",
		"react-native-screens": "3.31.1",
		"react-native-svg": "15.2.0",
		"react-redux": "^9.1.2",
		"realm": "^12.12.0",
		"ulidx": "^2.3.0",
		"yup": "^1.4.0",
		"yup-password": "^0.4.0"
	},
	"devDependencies": {
		"@babel/core": "^7.24.9",
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@eslint/eslintrc": "^3.1.0",
		"@eslint/js": "^9.7.0",
		"@tanstack/eslint-plugin-query": "^5.51.15",
		"@types/dompurify": "^3.0.5",
		"@types/react": "~18.2.79",
		"@typescript-eslint/eslint-plugin": "^7.17.0",
		"@typescript-eslint/parser": "^7.17.0",
		"eslint": "^8.5.7",
		"eslint-config-expo": "^7.1.2",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-unused-imports": "^4.0.1",
		"husky": "^9.1.2",
		"lint-staged": "^15.2.7",
		"prettier": "^3.3.3",
		"react-native-svg-transformer": "^1.5.0",
		"typescript": "~5.3.3"
	},
	"private": true,
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write",
			"git add"
		],
		"**/*.{json,md}": [
			"prettier --write",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	}
}
